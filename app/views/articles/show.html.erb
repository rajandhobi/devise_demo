<h1><%= @article.title %></h1>
<p><%= @article.body %></p>
<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %> |
<%= form_with(model: @article, method: :delete, local: true) do %>
    <%= button_to 'Delete', @article, method: :delete, data: { confirm: 'Are you sure you want to delete this article?' } %>
  <% end %>
  